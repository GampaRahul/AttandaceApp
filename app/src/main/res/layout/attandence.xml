<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/attdblock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/relative_layout_background">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="cursive"
            android:text=""
            android:textSize="40sp" />


        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/minus"
            android:layout_alignBottom="@+id/minus"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:background="#8BC34A"
            android:onClick="onplus"
            android:text="+"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/plus"
            android:background="#E53935"
            android:onClick="onminus"
            android:text="-"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/minus"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@id/add"
            android:text="Absent" />

        <TextView
            android:id="@+id/per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="60dp"
            android:text="" />

        <TextView
            android:id="@+id/minper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/percent"
            android:layout_alignLeft="@id/percent"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@id/percent"
            android:text="Min: 75%" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/plus"
            android:layout_marginLeft="30dp"
            android:text="Present" />

        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/name"
            android:layout_marginRight="15dp"
            android:background="#8BC34A"
            android:text="100.0%"
            android:textColor="#fff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plus"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:text="0" />
        <TextView
            android:id="@+id/hidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/minus"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/plus"
            android:text="0" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="onDelete"
        android:src="@drawable/delete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>